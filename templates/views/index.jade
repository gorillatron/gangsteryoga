      .hamburger.absolute.right-0.top-0.mr2.lg-mr0
        .line
        .line
        .line
    

    section#content.clearfix.max-width-4.mx-auto


      section.hero.max-width-4.mx-auto.mb4(style="background-image: url(/images/webgangster-bw-copy@3x.png);")


      section.wide-text.my4.clearfix.py2.lg-py4
        .text-content.center  Gangster Yoga setter søkelys på det å være menneske og hvordan man får kontakt med det innerste i seg selv.
      

      section.links.clearfix.px2

        .col.col-12.lg-col-6.lg-pr3
          
          a.link.image-link(href="/vaartarbeid")
            .image(style="background-image: url(/images/fotograf-nicki-twang-prisonyoga-007-filter@3x.png)")
            .text.px3
              span 
                | Vårt arbeid
          
          a.link.text-link(href="/yogasommetode").mt4
            .box
            .text.px3
              span 
                | Hvorfor Yoga
        
        .col.col-12.lg-col-6.lg-pl3.xs-hide.mt4.lg-mt0
          .photo(style="background-image: url(/images/webgangster-filter-lys@2x.png)")

      
      section.wide-text.my4.clearfix.py2.lg-py4
        .text-content.center Puste seg gjennom utfordringer...

      section.hero.max-width-4.mx-auto.mb4(style="background-image: url(/images/webgangster-bw@2x.png);")


      section.wide-text.my4.clearfix.py2.lg-py4
        .text-content.center
          | ...kjenne på stivheter og ubehag, 
          br
          | og gradvis bygge opp en større klarhet i sinnet som blir vedvarende og stabil.
      

      section.links.clearfix.mb4.px2

        .col.col-12.lg-col-6.lg-pr3.xs-hide
          .photo.mb4(style="background-image: url(/images/webgangster-27-bw@2x.png)")

        
