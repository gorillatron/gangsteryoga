.subpage.instruktoerer
  .content-container
    .content.lg-py4

      .clearfix.mx-auto.center.max-width-3.p2.sm-px3.lg-py4.relative

        .absolute.instructor-list
          .col.col-12.mb3 
            a.h1.back.text-decoration-none.mx-auto.md-hide.lg-hide(href="/") ← 
            h1
              a.back.absolute.left.pr2.mln3.text-decoration-none.sm-hide.xs-hide(href="/") ← 
              | Instruktører
          .col.col-12
            .clearfix
              each instructor in instructors
                a.instructor.col.col-12.md-col-4.lg-col-3.center.mb3(href="/instruktoerer/" + instructor.key)
                  .photo.mx-auto.mb2(style="background-image: url( " + instructor.photo.secure_url + " )")
                  .h3.name= instructor.name.full
        
        .absolute.instructor-details
          .col.col-12.mb3
            each instructor in instructors
              .instructor-detail.display-none(data-instructor-key=instructor.key)
                .col.col-12.mb3 
                  a.h1.back.text-decoration-none.mx-auto.md-hide.lg-hide(href="/instruktoerer") ← 
                  h1
                    a.back.absolute.left.pr2.mln3.text-decoration-none.sm-hide.xs-hide(href="/instruktoerer") ← 
                    | #{instructor.name.full}
                  p!=instructor.bio.html
